<p id="notice"><%= notice %></p>
<div class="container">
    <div class="title d-flex justify-content-center">
    <h1>Tv Shows</h1>
    </div>
<div class="row">
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Sinopsis</th>
      <th>Fecha de lanzamiento</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><img src="<%= tv_show.ruta_img %>" width="80px"></td>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.summary %></td>
        <td><%= tv_show.release_date %></td>
        <td><%= tv_show.rating %></td>
        <td><%= link_to (tv_show) do %><i class="material-icons">search</i><% end %></td>
        <td><%= link_to about_tv_show_path(tv_show) do %><i class="material-icons">info</i><% end %></td>
        <td><%= link_to edit_tv_show_path(tv_show) do %><i class="material-icons">edit_note</i><% end %></td>
        <td><%= link_to tv_show, method: :delete, data: { confirm: '¿Estás seguro?' } do %> <i class="material-icons">delete</i><% end %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<br>
<%= paginate @tv_shows %>
<br>
<%= link_to 'Nueva Serie', new_tv_show_path %> |
<%= link_to 'Buscar Serie', search_tv_shows_path %>